<div class="tweet">
  <div class="user clearfix">
    <%= link_to user_path(user.id, user_id: user.id), title: "ユーザ画面" do %>
      <%= attachment_image_tag user, :profile_image, :fill, 30, 30, class: "profile-image", format: 'jpeg', fallback: "no_image.png", size: "30x30" %>
      <span><%= user.name %></span>
    <% end %>
  </div>
  <div class="tweet-content clearfix">
    <%= simple_format(user.introduction) %>
  </div>
</div>
